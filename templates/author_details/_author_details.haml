.tabbable.tabs-left
  %ul.nav.nav-tabs
    %li.nav-item
      %a.nav-link{class: page == :commits_by_date ? 'active' : '', href: 'commits_by_date.html'}= :commits_by_date.t
    %li.nav-item
      %a.nav-link{class: page == :changed_lines_by_date ? 'active' : '', href: 'changed_lines_by_date.html'}= :changed_lines_by_date.t
    %li.nav-item
      %a.nav-link{class: page == :insertions_by_date ? 'active' : '', href: 'insertions_by_date.html'}= :insertions_by_date.t
    %li.nav-item
      %a.nav-link{class: page == :deletions_by_date ? 'active' : '', href: 'deletions_by_date.html'}= :deletions_by_date.t

  .tab-content
    .tab-pane.active
      .page-header
        %h1.text-center= page.t

      - case page
      - when :commits_by_date
        = high_stock('charts.commits_sum_by_author_by_date', charts.commits_sum_by_author_by_date([author]))

      - when :changed_lines_by_date
        = high_stock('charts.total_changed_lines_by_author_by_date', charts.total_changed_lines_by_author_by_date([author]))
        = high_stock('charts.changed_lines_by_author_by_date', charts.changed_lines_by_author_by_date(author))

      - when :insertions_by_date
        = high_stock('charts.total_insertions_by_author_by_date', charts.total_insertions_by_author_by_date([author]))
        = high_stock('charts.insertions_by_author_by_date', charts.insertions_by_author_by_date(author))

      - when :deletions_by_date
        = high_stock('charts.total_deletions_by_author_by_date', charts.total_deletions_by_author_by_date([author]))
        = high_stock('charts.deletions_by_author_by_date', charts.deletions_by_author_by_date(author))
